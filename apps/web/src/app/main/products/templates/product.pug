										a(href='javascript:void(0);')
											img.recipe-thumbnail(
												[src]='product.image',
												[alt]='product.name')
									h4.text-truncate([title]='product.name')
										a(href='javascript:void(0);', [class]='"color-" + ( (index + 1) % 9 )')
											| {{ product.name }}

