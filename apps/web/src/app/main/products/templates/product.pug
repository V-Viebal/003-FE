	.row.recipe-listing-main-bg(name='recipe-container')
		.container
			.col-lg-12.col-md-12.col-sm-12.recipe-listing
				.row.row-centered
					+for('product of productService.products(); track product; let index = $index')
						.col-lg-4.col-md-4.col-sm-12
							.feature-container
								.recipe-listing.recipe-listing-bg.col-centered([class]='"bg-" + ( (index + 1) % 9 )')
